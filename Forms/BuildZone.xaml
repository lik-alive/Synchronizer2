<UserControl x:Class="Synchronizer.Forms.BuildZone"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Synchronizer.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#eee">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center">Loading...</TextBlock>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ProgressBar x:Name="progressBar" Width="100" Height="10" Margin="5,10"></ProgressBar>
                <Button Background="Transparent" BorderThickness="0" Cursor="Hand" Padding="0" Click="Button_Click">
                    <Image Source="/Synchronizer;component/Resources/close.png" Width="24"></Image> 
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
