<Window x:Class="Synchronizer.Forms.InfoOK"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Information" Name="infoOKWindow" BorderBrush="#00A9EC" Height="160" Width="300" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Icon="/Synchronizer;component/Resources/info.ico" ResizeMode="NoResize" Background="#EFEFEF">
    <Window.Resources>
        <ResourceDictionary Source="/Synchronizer;component/Forms/ButtonStyle.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" HorizontalAlignment="Center" Margin="8,0,8,0" VerticalAlignment="Center" FontSize="16" Content="{Binding ElementName=infoOKWindow, Path=Info}" />
        <Button Grid.Row="1" Content="OK" Height="35" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Bottom" Name="buttonOK" Width="85" FontSize="16" BorderBrush="#AAAAAA" Click="OK_Click" />
    </Grid>
    
</Window>
